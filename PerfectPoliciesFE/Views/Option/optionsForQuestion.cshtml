@model IEnumerable<PerfectPoliciesFE.Models.Option>

@{
    ViewData["Title"] = "optionsForQuestion";

    var QuestionName = ViewBag.questioName;
}



<h4>Options for question : "@QuestionName "</h4>


<table class="table">

    <thead>
        <tr>
         
            @*<th>
                @Html.DisplayNameFor(model => model.OptionID)
            </th>*@
            <th>
                @Html.DisplayNameFor(model => model.OptionText)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OptionNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CorrectAnswer)
            </th>
            @*<th>
            @Html.DisplayNameFor(model => model.QuestionID)
        </th>*@
            <th></th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            @Html.HiddenFor(modelItem => item.OptionID)
            @Html.HiddenFor(modelItem => item.QuestionID)
            <tr>
                @*<td>
                    @Html.DisplayFor(modelItem => item.OptionID)
                </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.OptionText)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OptionNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CorrectAnswer)
                </td>
                @*<td>
                    @Html.DisplayFor(modelItem => item.QuestionID)
                </td>*@
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.OptionID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.OptionID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.OptionID })
                </td>
            </tr>
        }
    </tbody>
</table>
